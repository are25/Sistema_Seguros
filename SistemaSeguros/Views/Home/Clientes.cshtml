
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 mb-3">
    <h4 class="text-gray-color m-0"> Nuevo Cliente </h4>
</div>
<hr />
<div class="col-12 p-2">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <p for="">Identificación:</p>
                <input type="text" placeholder="0" id="txtIdentificacion" name="txtIdentificacion" class="form-control"  maxlength="20">
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <p for="">Nombre Cliente:</p>
                <input type="text" placeholder="0" id="txtNombre" name="txtNombre" class="form-control"  maxlength="50">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <p for="">Correo:</p>
                <input type="text" placeholder="0" id="txtCorreo" name="txtCorreo" class="form-control"  maxlength="50">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <p for="">Teléfono:</p>
                <input type="text" placeholder="0" id="txtTelefono" name="txtTelefono" class="form-control"  maxlength="50">
            </div>
        </div>

        <div class="col-12 pt-4 text-center">
            <button class="btn btn-primary agregarRegistro btn-lg" id="btnGuardar">
                Guardar datos
            </button>
            <button class="btn btn-primary agregarRegistro btn-lg" id="btnActualizar">
                Actualizar datos
            </button>
            <button class="btn btn-success agregarRegistro btn-lg" id="btnLimpiar">
                Limpiar Campos
            </button>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-striped table-bordered tablaApp dataTable no-footer" id="tblClientes">
                <thead>
                    <tr>
                        <th scope="col">Identificación</th>
                        <th scope="col">Nombre Usuario</th>
                        <th scope="col">Correo Usuario</th>
                        <th scope="col">Teléfono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

 
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/admin-clientes")
 
