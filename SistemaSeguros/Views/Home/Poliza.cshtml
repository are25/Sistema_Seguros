
@{
    ViewBag.Title = "Poliza";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 mb-3">
    <h4 class="text-gray-color m-0"> Nueva Póliza </h4>
</div>
<hr />
<div class="col-12 p-2">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <p for="">Descripción:</p>
                <input type="text" placeholder="0" id="txtDescripcion" name="txtDescripcion" class="form-control" maxlength="100">
            </div>
        </div>

        <div class="col-md-3" hidden>
            <div class="form-group">
                <p for="">Nombre Cliente:</p>
                <input type="text" placeholder="0" id="txtId" name="txtId" class="form-control" maxlength="50">
            </div>
        </div>


        <div class="col-12 pt-4 text-center">
            <button class="button btn-success btn-lg" id="btnGuardar">
                Guardar datos
            </button>
            <button class="button btn-success btn-lg" id="btnActualizar">
                Actualizar datos
            </button>
            <button class="button btn-success btn-lg" id="btnLimpiar">
                Limpiar Campos
            </button>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-striped table-bordered tablaApp dataTable no-footer" id="tblTipoCubrimiento">
                <thead>
                    <tr>
                        <th scope="col">Id Tipo Cubrimiento</th>
                        <th scope="col">Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/admin-cubrimiento")




